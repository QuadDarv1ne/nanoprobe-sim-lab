# Nanoprobe Simulation Lab - Environment Configuration
# Скопируйте этот файл в .env и настройте значения

# Приложение
APP_NAME=Nanoprobe Simulation Lab
APP_VERSION=1.0.0
APP_DEBUG=false
APP_LOG_LEVEL=INFO

# Веб-панель
WEB_HOST=127.0.0.1
WEB_PORT=5000
WEB_AUTO_OPEN_BROWSER=true

# Кэш
CACHE_ENABLED=true
CACHE_MAX_SIZE_MB=100
CACHE_MAX_AGE_DAYS=7
CACHE_AUTO_CLEANUP=true

# Логирование
LOG_FORMAT=[%(levelname)s] %(asctime)s: %(message)s
LOG_FILE=logs/app.log

# Производительность
PERF_MONITORING_ENABLED=true
PERF_METRICS_INTERVAL_SEC=5
PERF_CPU_THRESHOLD=80
PERF_MEMORY_THRESHOLD=85

# Компоненты
COMPONENT_SPM_ENABLED=true
COMPONENT_ANALYZER_ENABLED=true
COMPONENT_SSTV_ENABLED=true
